@model SmartWay.Models.Project

<form method="post" asp-action= "Details" enctype="multipart/form-data">
<input hidden asp-for="Id" />

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

    <ol>
        <li><a href="#">Home</a></li>
        <li>Project Details</li>
    </ol>
    <h2>Project Details</h2>

    </div>
</section><!-- End Breadcrumbs -->

<!-- ======= Project Details Section ======= -->
<section id="portfolio-details" class="portfolio-details">
    <div class="container">

    <div class="row gy-4">

        <div class="col-lg-8">
        <div class="portfolio-details-slider swiper">
            <div class="swiper-wrapper align-items-center">

            <div class="swiper-slide">
                <img id="ProjectImage" alt="Project Image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.ProjectImage))"/>
               <img id="ProjectImage" alt="Project Image" src="~/img/portfolio/image.png" />
            
            </div>

            </div>
        </div>
        </div>

        <div class="col-lg-4">
        <div class="portfolio-info">
            <h3>Project information</h3>
            <ul>
            <li><strong>Project Name</strong>: @Model.Name</li>
            <li><strong>Category</strong>: @Model.Category.Name</li>
            </ul>
        </div>
        <div class="portfolio-description">
            <h2>Project Description</h2>
            <p>
                @Model.Description
            </p>
        </div>
        </div>

    </div>

    </div>
</section><!-- End Portfolio Details Section -->

</form>