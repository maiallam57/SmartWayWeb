@{
    ViewData["Title"] = "Contact";
}
@model SmartWay.Models.UserContact

<div class="container">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container">

        <div class="section-title">
          <span>Contact Us</span>
          <h2>Contact Us</h2>
        </div>

          <div class="row" data-aos="fade-up">

          <div class="col-lg-6 ">
            <iframe class="mb-4 mb-lg-0" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" style="border:0; width: 100%; height: 384px;" allowfullscreen></iframe>
          </div>

          <div class="col-lg-6">
            <form asp-action="Contact" method="post"  class="php-email-form">
              <div class="row">
                <div class="col-md-6 form-group">
                    <input type="text" class="form-control" asp-for="Username" id="name" placeholder="Your Name" required>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Your Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
              </div>
              </div>
              <div class="form-group mt-3">
                <input type="text" class="form-control" asp-for="Subject" id="subject" placeholder="Subject" required>
                    <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
              <div class="form-group mt-3">
                <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
            </div>
              <div class="my-3">
                <div class="sent-message">Your message has been sent. Thank you!</div>
              </div>
              <div class="my-2 text-center"><button asp-area="Customer" asp-controller="Home" asp-action="Contact" type="submit">Send Message</button></div>
            </form>
          </div>

        </div>

      </div>
    </section><!-- End Contact Section -->
</div>


@section Scripts{
    <partial name="_Notification" />

}